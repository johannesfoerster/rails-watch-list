
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
   <h1><%= @list.name %></h1>
  </div>
</div>
<ul>
  <% @list.movies.each do |movie| %>
  <h3> <%= movie.title  %></h3>
  <img src=<%=movie.poster_url%> alt="Good pic" width=150px>
    <%= movie.overview %>
    <h4>rating: <%=  movie.rating%></h4>
   <%end %>
</ul>

<%= link_to "Add movie to list", new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
<%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-secondary', data: { confirm: 'Are you sure you want to delete this list?' } %>
